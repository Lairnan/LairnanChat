<Application x:Class="ChatClient.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ChatClient.WPF"
             StartupUri="/Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <local:ViewModelLocator x:Key="VmLocator" />
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ConvertersResource.xaml"/>
                <ResourceDictionary Source="/Resources/MainResource.xaml" />
                <ResourceDictionary Source="/Resources/InputTextResource.xaml" />
                <ResourceDictionary Source="/Resources/MenuItemResource.xaml" />
                <ResourceDictionary Source="/Resources/ComboBoxResource.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>