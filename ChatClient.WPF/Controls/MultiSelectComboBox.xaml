<controls:BaseComboBox x:Class="ChatClient.WPF.Controls.MultiSelectComboBox"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                       xmlns:controls="clr-namespace:ChatClient.WPF.Controls"
                       VerticalContentAlignment="Center"
                       d:DesignHeight="300"
                       d:DesignWidth="300"
                       Style="{StaticResource ComboBoxStyle}"
                       mc:Ignorable="d">
    <ComboBox.ItemContainerStyle>
        <Style BasedOn="{StaticResource {x:Type ComboBoxItem}}" TargetType="{x:Type controls:MultiSelectComboBoxItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type controls:MultiSelectComboBoxItem}">
                        <CheckBox VerticalAlignment="Center"
                                  IsChecked="{Binding IsChecked, RelativeSource={RelativeSource TemplatedParent}}"
                                  Style="{StaticResource {x:Type CheckBox}}">
                            <ContentPresenter Content="{TemplateBinding Content}" />
                        </CheckBox>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </ComboBox.ItemContainerStyle>
</controls:BaseComboBox>